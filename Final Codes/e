from picamera2 import Picamera2
from datetime import datetime
import time
import os

picam2 = Picamera2()
picam2.start_preview()

while True:
    timestamp = datetime.now().isoformat()
    picam2.capture_file(f"/path/to/folder/{timestamp}.jpg")
    picam2.capture_file(f"/path/to/folder/{timestamp}.dng")
    time.sleep(7)

picam2.stop_preview()
